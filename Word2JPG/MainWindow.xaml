<Window x:Class="Word2JPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word2JPG"
        mc:Ignorable="d"
        Title="Word2PNG" Height="239" Width="313">
    <Grid Margin="0,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="82*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="DocTextBox" HorizontalAlignment="Left" Margin="20,47,0,0" TextWrapping="Wrap" Text="Path to .doc file" VerticalAlignment="Top" Width="120" Grid.Column="2"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="23,45,0,0" VerticalAlignment="Top" Click="Button_Load" Width="39" Grid.ColumnSpan="3"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="23,83,0,0" VerticalAlignment="Top" Width="39" Grid.ColumnSpan="3" Click="Button_Save"/>

    </Grid>
</Window>
